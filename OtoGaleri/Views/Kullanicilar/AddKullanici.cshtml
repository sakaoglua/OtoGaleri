@model EntityLayer.Concrete.Kullanicilar
@{
    ViewBag.Title = "AddKullanici";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kullanıcı Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddKullanici", "Kullanicilar", FormMethod.Post))
 {
    <div class="form-group">
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(x => x.K_Adi)
        @Html.ValidationMessageFor(x=>x.K_Adi)
        <br /> <br />
        @Html.Label("Parola")
        @Html.TextBoxFor(x => x.K_Sifre)
        @Html.ValidationMessageFor(x=>x.K_Sifre)
        <br /> <br />
        <button class="btn btn-info">Kullanıcı Ekle</button>    
    </div>
 }

